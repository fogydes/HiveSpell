{
  "rules": {
    "matches": {
      ".indexOn": ["type", "code", "status"]
    },
    "users": {
      ".read": true,
      ".indexOn": ["corrects", "wins"],
      "$uid": {
        ".write": "$uid === auth.uid",
        "wins": {
          ".write": "auth != null"
        },
        "corrects": {
          ".write": "auth != null"
        },
        "stars": {
          ".write": "auth != null"
        }
      }
    },
    "presence": {
      ".read": true,
      ".write": "auth != null"
    },
    "usernames": {
      ".read": true,
      ".write": "auth != null"
    },
    "chat": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "rooms": {
      ".indexOn": ["type", "code"],
      ".read": "auth != null",
      "$roomId": {
        ".write": "(auth != null && !data.exists()) || (data.exists() && data.child('players').child(auth.uid).exists())",
        "gameState": {
          ".write": "auth != null && data.parent().child('players').child(auth.uid).exists()"
        },
        "status": {
          ".write": "auth != null && data.parent().child('players').child(auth.uid).exists()"
        },
        "intermissionEndsAt": {
          ".write": "auth != null && data.parent().child('players').child(auth.uid).exists()"
        },
        "players": {
          "$playerId": {
            ".write": "auth != null && data.parent().parent().child('players').child(auth.uid).exists()"
          }
        }
      }
    }
  }
}
